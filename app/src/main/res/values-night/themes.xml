<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdminCarBuddy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">#F3FFA963</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F3FFA963</item>
        <item name="colorSecondaryVariant">#F3FFA963</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:textColorHighlight">@color/color_primary</item>


        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">@color/color_status_bar</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item  name="android:forceDarkAllowed">false</item>
    </style>
</resources>